rm -rf dist
git clone git@github.com:xdv/bower-divvy-vault-client.git dist
gulp bower
cd dist
version=$(cat bower.json | grep -Eo '([0-9]\.?)+(-rc[0-9])?')
echo "version: $version"
git add divvy-vault-client.js divvy-vault-client-debug.js divvy-vault-client-min.js bower.json
git commit -m "[TASK] add v$version"
git tag "v$version"
git push origin master
git push --tags origin master
cd ..
